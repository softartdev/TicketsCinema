<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.softartdev.ticketscinema.ProfileActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Тема оформления"
            android:layout_row="0"
            android:layout_column="0"
            android:padding="5dp"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/themes"
            android:layout_row="0"
            android:layout_column="1"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Город"
            android:layout_row="1"
            android:layout_column="0"
            android:padding="5dp"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/cities"
            android:layout_row="1"
            android:layout_column="1"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Бонусный счет"
            android:layout_row="2"
            android:layout_column="0"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0158Р"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="@dimen/abc_action_bar_content_inset_material"
            android:layout_row="2"
            android:layout_column="1"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Карта №"
            android:layout_row="3"
            android:layout_column="0"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0123456789"
            android:textColor="@android:color/holo_purple"
            android:layout_row="3"
            android:layout_column="1"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Почта"
            android:layout_row="4"
            android:layout_column="0"
            android:padding="5dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user@gmail"
            android:layout_row="4"
            android:layout_column="1"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Телефон"
            android:layout_row="5"
            android:layout_column="0"
            android:padding="5dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8-902-123-45-67"
            android:layout_row="5"
            android:layout_column="1"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Имя"
            android:layout_row="6"
            android:layout_column="0"
            android:padding="5dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%USER_NAME%"
            android:layout_row="6"
            android:layout_column="1"
            android:padding="5dp"/>

    </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="АВТОРИЗАЦИЯ"
            android:layout_gravity="center_horizontal"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Пользователь"
            android:padding="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@drawable/vk_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%USER_NAME%"
                android:padding="5dp"
                android:textColor="@android:color/holo_blue_dark"/>
        </LinearLayout>



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ДОБАВИТЬ СОЦИАЛЬНУЮ СЕТЬ"
            android:padding="5dp"
            android:background="@android:color/holo_blue_light"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="СМЕНА ПАРОЛЯ"
            android:padding="5dp"
            android:background="@android:color/holo_blue_light"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ВЫХОД"
            android:padding="5dp"
            android:background="@android:color/holo_blue_light"/>

    </LinearLayout>

</ScrollView>
